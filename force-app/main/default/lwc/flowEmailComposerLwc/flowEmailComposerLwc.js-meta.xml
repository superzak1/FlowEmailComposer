<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="whoId" type="string" label="Who Id" />
            <property name="whatId" type="string" label="What Id" />
            <property name="emailBody" type="string" label="Email Body" />
            <property name="subject" type="string" label="Subject" />
            <property name="senderName" type="string" label="Sender Name" />
            <property name="fromAddress" type="string" label="From Addresses" />
            <property name="toAddresses" type="string" label="To Addresses" />
            <property name="ccAddresses" type="string" label="CC Addresses" />
            <property name="bccAddresses" type="string" label="BCC Addresses" />
            <property name="selFolderId" type="string" label="Selected Folder Id" />
            <property name="selectedDocumentId" type="string" label="Selected Document For Preview" />
            <property name="emailTemplateId" type="string" label="Email Template Id" />
            <property name="logEmail" type="boolean" default="false" label="Log Email" />
            <property name="showSendButton" type="boolean" default="false" label="Show Send Button" />
            <property name="hasModalOpen" type="boolean" default="false" label="Is Modal Open" />
            <property
        name="sendOnNext"
        type="boolean"
        default="false"
        label="Send On Next"
        description="Send Email when the Next button is clicked"
      />

        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
